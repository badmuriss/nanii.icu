# Server Configuration
PORT=3001
NODE_ENV=development
LOG_LEVEL=debug

# CORS Configuration
CORS_ORIGIN=http://localhost:8080

# MongoDB Configuration (Individual variables - recommended)
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DATABASE=naniiicu
# Leave MONGO_USER and MONGO_PASSWORD empty for local development without auth
# MONGO_USER=admin
# MONGO_PASSWORD=password
# MONGO_AUTH_SOURCE=admin

# MongoDB Configuration (Legacy - connection string)
# If MONGO_URI is set, it overrides individual variables above
# MONGO_URI=mongodb://localhost:27017/naniiicu

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
